<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/myColor">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New Employee Record"
        android:id="@+id/newEmployee"
        android:layout_above="@+id/fetchEmployee"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"/>

    <Button
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fetch Existing Employee Record"
        android:id="@+id/fetchEmployee"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/newEmployee"
        android:layout_alignEnd="@+id/newEmployee"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="View All Employees"
        android:id="@+id/viewAllEmployees"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:layout_below="@+id/fetchEmployee"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
