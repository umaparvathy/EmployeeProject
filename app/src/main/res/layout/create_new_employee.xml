<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/myColor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Employee Details"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:id="@+id/heading"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:id="@+id/searchNameText"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/heading"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/name"
        android:hint="Enter employee name here"
        android:layout_alignBottom="@+id/searchNameText"
        android:layout_alignRight="@+id/heading"
        android:layout_alignEnd="@+id/heading" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:text="Age"
        android:textColor="#ffffff"
        android:id="@+id/ageText"
        android:layout_alignBaseline="@+id/age"
        android:layout_alignBottom="@+id/age"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter employee age here"
        android:textColor="#ffffff"
        android:id="@+id/age"
        android:layout_below="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:layout_alignRight="@+id/name"
        android:layout_marginTop="45dp"
        android:inputType="number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:textColor="#ffffff"
        android:id="@+id/photoText"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/age"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/photo"
        android:layout_alignTop="@+id/photoText"
        android:layout_alignLeft="@+id/age"
        android:layout_alignStart="@+id/age"
        android:background="@drawable/border_image"
        android:padding="1dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Browse"
        android:id="@+id/browse"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginLeft="30dp"
        android:background="@color/colorAccent"
        android:layout_alignBottom="@+id/photo"
        android:layout_toRightOf="@+id/photo"
        android:layout_toEndOf="@+id/photo" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="#ba3333"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>